<html lang="en">
  <head>
    <title>TinyApp</title>
  </head>
  <body style="font-size:20px; padding:50px;">
    <h2>Login:</h2>
    <form action="/login" method="POST" style="margin:150px;">
      <label for="email">Email:</label>
      <input id="email" type="email" name="email" style="width: 300px">
      <label for="password">Password:</label>
      <input id="password" type="password" name="password" style="width: 300px">
      <input type="submit" value="Login">
    </form>
    <form action="/register" method="GET"><input type="submit" value="Register"></form>
  </body>
</html>